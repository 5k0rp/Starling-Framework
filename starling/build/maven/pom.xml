<!-- @see: https://cwiki.apache.org/confluence/display/FLEX/Building+Flex+applications+with+Maven-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<!-- Core maven setup -->
	<groupId>com.gamua</groupId>
	<artifactId>starling-framework</artifactId>
	<packaging>swc</packaging>
	<version>1.5.2-SNAPSHOT</version>
	<!-- Plugin version setup -->
	<properties>
		<flexmojos.version>6.0.1</flexmojos.version>
		<flex.framework.version>4.6.b.23201</flex.framework.version>
		<playerglobal.version>11.7</playerglobal.version>
	</properties>
	<!-- CI server setup -->
	<ciManagement>
		<system>jenkins</system>
		<url>https://trylogic.ci.cloudbees.com/job/StarlingFramework/</url>
	</ciManagement>
	<!-- Build plugin setup -->
	<build>
		<sourceDirectory>../../src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>net.flexmojos.oss</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>${flexmojos.version}</version>
				<extensions>true</extensions>
				<configuration>
          <debug>false</debug>
					<storepass/>
					<skipTests>true</skipTests>
					<skipTest>true</skipTest>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.adobe.flex</groupId><!--org.apache.flex-->
						<artifactId>compiler</artifactId>
						<version>${flex.framework.version}</version>
						<type>pom</type>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
	<!-- Plugin dependency setup -->
	<dependencies>
    	<dependency>
    		<groupId>com.adobe.flash.framework</groupId>
    		<artifactId>playerglobal</artifactId>
    		<version>${playerglobal.version}</version>
    		<type>swc</type>
    	</dependency>
	</dependencies>
	<!-- Core Repository setup -->
	<repositories>
		<repository>
			<id>sonatype-repository</id>
			<url>https://oss.sonatype.org/content/groups/public</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
		</repository>
		<repository>
			<id>flex-mojos-repository</id>
			<url>http://repository.sonatype.org/content/groups/flexgroup/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<!-- Plugin Repository setup -->
	<pluginRepositories>
		<pluginRepository>
			<id>sonatype-repository</id>
			<url>https://oss.sonatype.org/content/groups/public</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
		</pluginRepository>
		<pluginRepository>
			<id>flex-mojos-repository</id>
			<url>http://repository.sonatype.org/content/groups/flexgroup/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
</project>